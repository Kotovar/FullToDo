{
  "compilerOptions": {
    "target": "es2023",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "rootDir": "../",
    "outDir": "dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "baseUrl": "..",
    "skipLibCheck": true,
    "paths": {
      "@sharedCommon/*": ["shared/*"],
      "@db/*": ["backend/src/db/*"],
      "@configs": ["backend/src/configs/index.ts"],
      "@configs/*": ["backend/src/configs/*"],
      "@tests/*": ["backend/src/tests/*"],
      "@controllers": ["backend/src/controllers/index.ts"],
      "@controllers/*": ["backend/src/controllers/*"],
      "@repositories": ["backend/src/repositories/index.ts"],
      "@repositories/*": ["backend/src/repositories/*"]
    }
  }
}
