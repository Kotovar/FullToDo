{
  "compilerOptions": {
    "target": "es2023",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "rootDir": "../",
    "outDir": "dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "baseUrl": "..",
    "skipLibCheck": true,
    "paths": {
      "@shared/*": ["shared/*"]
    }
  }
}
