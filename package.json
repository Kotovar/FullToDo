{
  "name": "fulltodo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "scripts": {
    "install:all": "npm install",
    "build": "npm run build --workspace=backend && npm run build --workspace=frontend",
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "prepare": "husky install .husky || echo '[prepare] husky not found, skipping'"
  },
  "dependencies": {
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/node": "^22.15.3",
    "@vitest/coverage-istanbul": "^3.1.2",
    "eslint": "^9.26.0",
    "eslint-plugin-prettier": "^5.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "3.5.3",
    "typescript": "^5.8.3"
  }
}
